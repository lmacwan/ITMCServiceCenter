    Layout = null;
}


@using (Html.BeginForm("SaveProjectTaskType", "ProjectTasks", FormMethod.Post, new { id = "frmSaveProjectTaskType" }))
{
    @Html.TextBox("HiddenProjectId", new { @class="hide", id="HiddenProjectId" })
