@using Telerik.Web.Mvc.UI
@using ITMCServiceCenter.Web.UI
@{
    ViewBag.Title = "Incident Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IncidentModel
<script type="text/javascript">
    function listAll() {
        var baseUrl = window.location.href;
        var url = baseUrl.substring(0, baseUrl.lastIndexOf('/'));
        window.location.href = url.substring(0, url.lastIndexOf('/')) + "/ListAll";
    }
</script>
<h2>Incident</h2>
<div class="scrollable">
    <div class="row">
        <div class="col-md-4 myColPadding">
            @Html.LabelFor(model => model.Incident.Title) :
        </div>
        <div class="col-md-8">
            @Html.DisplayFor(model => model.Incident.Title)
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 myColPadding">
            @Html.LabelFor(model => model.Incident.RequestedBy) : 
        </div>
        <div class="col-md-8">
            @Html.DisplayFor(model => model.Incident.RequestedByName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 myColPadding">
            @Html.LabelFor(model => model.Incident.Description)
        </div>
        <div class="col-md-8">
             @Html.DisplayFor(model => model.Incident.Description)
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 myColPadding">
