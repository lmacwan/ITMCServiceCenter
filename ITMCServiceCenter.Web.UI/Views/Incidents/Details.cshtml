            @Html.DisplayFor(model => model.Incident.Status)
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 myColPadding">
            @Html.Label(ITMCServiceCenter.Web.Domain.Resources.ITMCServiceCenterResource.resEngineers) : 
        </div>
        <div class="col-md-8">
            @Html.DisplayFor(model => model.SelectedEngineers)
        </div>
    </div>
     <div class="row">
        <div class="col-md-4 myColPadding">
